# Database Configuration
DATABASE_URL=sqlite:///energy_tracker.db

# MQTT Broker Settings
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_TOPIC_PREFIX=energy

# ThingsBoard Configuration
THINGSBOARD_HOST=localhost
THINGSBOARD_PORT=8080
THINGSBOARD_ACCESS_TOKEN=your_thingsboard_access_token

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# Twilio SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
ENERGY_COST_PER_KWH=0.12
HIGH_USAGE_THRESHOLD=5.0
ANOMALY_DETECTION_THRESHOLD=2.0

# Gamification Settings
POINTS_PER_KWH_SAVED=10
POINTS_MANUAL_INPUT=5
POINTS_DAILY_LOGIN=2

# Session Secret (use a strong random key in production)
SESSION_SECRET=your_session_secret_key_here

# Example IoT Device Configuration
# ESP32_DEVICE_ID=esp32_kitchen
# RASPBERRY_PI_DEVICE_ID=rpi_living_room

# Optional: Custom notification settings
# NOTIFICATION_EMAIL=admin@yourdomain.com
# DAILY_REPORT_TIME=08:00
# WEEKLY_REPORT_DAY=sunday

# Optional: Advanced ThingsBoard settings
# THINGSBOARD_USERNAME=tenant@thingsboard.org
# THINGSBOARD_PASSWORD=tenant
# THINGSBOARD_DEVICE_ID=your_device_id

# Optional: Database settings for production
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/energy_tracker

# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/energy_tracker

# Security Settings
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Logging Settings
# LOG_LEVEL=INFO
# LOG_FILE_PATH=logs/energy_tracker.log

# Data Retention Settings
# DATA_RETENTION_DAYS=365
# CLEANUP_INTERVAL_HOURS=24

# AI/ML Settings
# AI_MODEL_TEMPERATURE=0.7
# AI_MAX_TOKENS=1500
# ENABLE_ANOMALY_DETECTION=true

# Backup Settings
# BACKUP_ENABLED=true
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30
# BACKUP_PATH=/backups/energy_tracker
